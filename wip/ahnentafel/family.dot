// ahnentafel for my daughters
digraph {
  labeljust="l";
  bgcolor="#193549"; rankdir = LR; splines=ortho;
  node[shape=box;style=filled;fillcolor="#eeeeee";
      fontname="kulim park"; width="1.35"];

  // this chunk uses groups to attempt to organize by row
  node[group=r0] You Daddy Grandpa
  node[group=r1] Mommy Grandma
  node[group=r2] NanaJi
  node[group=r3] NaniJi

  // subgraphs to organize by columns (generations)
  // (delete the extra attributes to make the nodes appear)
  subgraph c0 { rank=same;
    You[label="1.\l" labelx="1. You\l" style=invis] }
  subgraph c1 { rank=same;
    Daddy[label="2.\l" labelx="2. Daddy\l" style=invis]
    Mommy[label="3.\l" labelx="3. Mommy\l" style=invis] }
  subgraph c2 { rank=same;
    Grandpa[label="4.\l" labelx="4. Grandpa\l" style=invis]
    Grandma[label="5.\l" labelx="5. Grandma\l" style=invis]
    NanaJi[label="6.\l"  labelx="6. ਨਾਨਾ ਜੀ\l"  style=invis]
    NaniJi[label="7.\l"  labelx="7. ਨਾਨੀ ਜੀ\l"  style=invis] }

  // edges: remove the the color to make them appear
  // fathers
  edge[style=solid; color=transparent; constraintx=none]
  You->Daddy
  Daddy->Grandpa
  Mommy->NanaJi

  // mothers
  edge[style=dashed; color=transparent]
  You->Mommy
  Daddy->Grandma
  Mommy->NaniJi
}
